<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/textViewSlideMenuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/layoutContainerOption"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/layoutContainerOption"
       android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >
        <ImageButton
            android:id="@+id/restore"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/restore_new_icon"
            />
        <View
            android:layout_width="5dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_height="30dp"
            android:src="@drawable/delete_new_icon"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewSlideMenuName"
        android:id="@+id/textViewsubTitle"
        android:text=""
        android:textColor="@android:color/black"
        android:textStyle="italic"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@+id/layoutContainerOption"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/layoutsepreter"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"

        android:layout_marginRight="5dp"
        android:layout_height="0.5dp"
        android:background="#c1c1c1" />

</RelativeLayout>